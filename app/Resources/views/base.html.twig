<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    {% if ('dev' == app.environment) %}
        <a href="https://github.com/spolischook/MiniShop"><img style="position: absolute; top: 0; right: 0; border: 0; z-index: 100500" src="https://camo.githubusercontent.com/365986a132ccd6a44c23a9169022c0b5c890c387/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f7265645f6161303030302e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png"></a>
    {% endif %}
        {% block body %}
            <div class="container">
                <nav class="navbar navbar-default" role="navigation">
                    <div class="container-fluid">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <a class="navbar-brand" href="{{ path('spolischook_minishop_index_index') }}">MiniShop</a>
                        </div><!-- /.navbar-collapse -->
                        <ul class="nav navbar-nav navbar-left">
                            <li><a href="{{ path('spolischook_minishop_store_new') }}">Создать Склад</a></li>
                            <li><a href="{{ path('spolischook_minishop_productmoving_getallmoving') }}">Движение товара</a></li>
                            <li><a href="{{ path('spolischook_minishop_moneytransfer_formtransfer') }}">Money Transfer</a></li>
                        </ul>
                    </div><!-- /.container-fluid -->
                </nav>
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <div class="alert alert-success" role="alert">{{ flashMessage|trans }}</div>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('error') %}
                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <div class="alert alert-danger" role="alert">{{ flashMessage|trans }}</div>
                {% endfor %}
                {% block container %}

                {% endblock %}
            </div>
        {% endblock %}
        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
